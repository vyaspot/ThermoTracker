{
    "ConnectionStrings": {
        "DefaultConnection": "Data Source=sensors.db"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.Hosting.Lifetime": "Information",
            "Microsoft.EntityFrameworkCore": "Warning"
        }
    },
    "SimulationConfig": {
        "UpdateIntervalMs": 2000,
        "DataHistorySize": 100,
        "MovingAverageWindow": 5,
        "AnomalyThreshold": 2.0
    },
    "TemperatureRangeConfig": {
        "FixedMin": 22.0,
        "FixedMax": 24.0,
        "UseFixedRangeAsPrimary": true
    },
    "FileLoggingConfig": {
        "LogDirectory": "Logs",
        "LogFileName": "Sensor_Readings_{date}.txt",
        "MaxFileSizeMB": 1, 
        "RetentionDays": 7,
        "EnableRotation": true,
        "IncludeHeader": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss",
        "UseHumanReadableFormat": true
    }
}